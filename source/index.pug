extends layouts/base
block body
	-
		const nav = [
			{
				link: '/library.html',
				label: 'что почитать',
			},
			{
				link: '/videos.html',
				label: 'что посмотреть',
			},
			{
				link: '/calendar.html',
				label: 'куда пойти',
			},
		]
	#intro.videoPresentation(intro): intro
	nav.navLayer
		ul.nav
			for item in nav
				li.navItem
					a.navLink(
					href=item.link
					)=item.label
append styles
	style#no-js-index.
		.no-js .navLayer {
			opacity: 1;
		}
		.js .navLayer {
			opacity: 0;
		}
		.js .videoPresentation ~ .navLayer {
			opacity: 1;
		}
block vendorStyles
	// PT Mono
		regular 400
	link(href='https://fonts.googleapis.com/css?family=PT+Mono' rel='stylesheet')
append scripts
	script#external-storage-videos.
		window['site'].step1video = {
			url: 'media/blackboard.mp4',
			type: 'video/mp4',
		};
		window['site'].step2video = {
			url: 'media/typewriter.mp4',
			type: 'video/mp4',
		};
